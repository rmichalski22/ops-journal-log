# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ops_journal_log"

# API
API_PORT=3001
API_URL=http://localhost:3001
SESSION_SECRET=change-me-in-production-use-long-random-string
SESSION_MAX_AGE_DAYS=7

# Web
NEXT_PUBLIC_API_URL=http://localhost:3001

# Email (SMTP)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=ops-journal@localhost

# Attachments - local disk
ATTACHMENTS_DIR=./uploads
ATTACHMENTS_MAX_SIZE_MB=10

# Attachments - S3/MinIO (optional, set to use S3 backend)
# S3_ENDPOINT=http://localhost:9000
# S3_BUCKET=ops-journal-attachments
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_USE_SSL=false

# Seed admin user (used by `npm run seed`)
SEED_ADMIN_EMAIL=admin@localhost
SEED_ADMIN_PASSWORD=admin123
